{
  "root": true,
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "assert": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "quotes": [2, "backtick"],
    "semi": [2, "never"],
    "space-before-function-paren": [2, "always"],
    "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "__"}],
    "object-curly-spacing": [2, "never"],
    "max-len": [0, 200, 2],
    "no-param-reassign": [2, { "props": false }]
  }
}
